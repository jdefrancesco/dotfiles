# [+] Custom alias:
case "$OSTYPE" in 
    darwin*)
        alias lsusb='system_profiler SPUSBDataType'
        alias shuf="gshuf"
        alias cat="ccat" 
    ;;
    linux*)
        #...
    ;;
esac

# Aliases I want set on all machines.
alias zed='vim ~/.zshrc && source ~/.zshrc && hash -r' # Command to open zshrc for reconfiguration.
alias myip="dig +short myip.opendns.com @resolver1.opendns.com" # Get my external IP address
alias dnsinuse="dig whoami.akamai.net +short" # Get what DNS server I am using.
[[ -x /usr/local/bin/exa ]] && alias ls="exa" # exa is a ls replacement.

# Custom exports:
export GOPATH=$HOME/Programming/Go

# [+] History options:
setopt histignorespace
setopt histsavenodups
setopt histallowclobber
export HISTORY_IGNORE="(ls|pwd|exit|cd ..)"

# Autojump - quick navigation for zsh, a godsend.
[ -f /usr/local/etc/profile.d/autojump.sh ] && . /usr/local/etc/profile.d/autojump.sh
# For markers, to remember past commands and easy access.
[[ -s "$HOME/.local/share/marker/marker.sh" ]] && source "$HOME/.local/share/marker/marker.sh"

# Base16 shell colors. Make your colors pretty!
BASE16_SHELL=$HOME/.config/base16-shell/
[ -n "$PS1" ] && \
    [ -z $VIM ] && \
    [ -s $BASE16_SHELL/profile_helper.sh ] && \
    eval "$($BASE16_SHELL/profile_helper.sh)"

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# This will clear ALL ideas (only relevant if "idea" program is installed)
clearideas() {
    for i in {1..$1}; do idea solve $i; done
}
