set realname = "Joey DeFrancesco"
set from = "jdefr89@gmail.com"
set use_from = yes
set envelope_from = yes

# NEED THIS TO AVOID "No Authenticators Available" error
set smtp_authenticators = "gssapi:login"
set smtp_url = "smtps://jdefr89@gmail.com@smtp.gmail.com:465/"

set imap_user = "jdefr89@gmail.com"

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set ssl_force_tls = yes
set ssl_starttls = yes

# G to get mail
bind index G imap-fetch-mail
bind index <tab> sync-mailbox

set signature = "J. DeFrancesco"

set editor = "vim"
set charset = "utf-8"
set record = ''

set sort="threads"
set sort = reverse-date-received
set strict_threads="yes"
set sort_aux="last-date-received"

unset collapse_unread
bind index - collapse-thread
bind index _ collapse-all

# Theme
source ~/.mutt/gruvbox/colors-gruvbox-shuber.muttrc

# Scroll inside a message
bind pager <up> previous-line
bind pager <down> next-line

set sleep_time = 0 # Be fast.
set smart_wrap
set beep_new

# Side bars
set sidebar_visible = no
set sidebar_width = 30
color sidebar_new brightred default

mailboxes =INBOX

# b will toggle side bar
macro index b '<enter-command>toggle sidebar_visible<enter>'
macro pager b '<enter-command>toggle sidebar_visible<enter>'

set hostname = shadow

# PGP
set crypt_use_gpgme = yes
set crypt_replyencrypt = yes
set crypt_replysign = yes
set crypt_replysignencrypted = yes
set crypt_verify_sig = yes
set pgp_show_unusable = no
set pgp_auto_decode = yes
source ~/.mutt/gpg.rc

# Alias file
set alias_file = ~/.mutt/aliases
set sort_alias = alias
set reverse_alias = yes
source $alias_file
source ~/.mutt/aliases
